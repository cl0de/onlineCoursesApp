<h1>Create New Course</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for (@course) do |f| %>
            <%= f.label :title %>
            <%= f.text_field :title%>
            <%= f.label :description %>
            <%= f.text_area :description %>
            <%= f.label :image %>
            <%= f.text_field :image%>
            <%= f.submit "Create Course", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>